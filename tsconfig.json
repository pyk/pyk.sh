{
  "compilerOptions": {
    // Type Checking
    "strict": false,

    // Modules
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["*"]
    },

    // Emit
    "outDir": "./build",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",

    // JavaScript Support
    "allowJs": true,

    // Interop Constraints
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    // Language and Environment
    "target": "ES2022",
    "lib": ["esnext", "DOM"],
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Completeness
    "skipLibCheck": true,

    // Projects
    "incremental": true
  }
}
