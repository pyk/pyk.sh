<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ title }}</title>

    <meta name="description" content="{{ description }}">

    <meta property="og:title" content="{{ title }}">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">

    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="icon.png">

    <!-- stylesheet -->
    <link rel="stylesheet" href="/style.css?v={% etag %}"/>

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>

<body class="font-inter">
    <div class="container mx-auto max-w-[960px] px-6 mt-16">

        <header class="space-y-4">
            <div class="flex flex-row space-x-2">
                <img class="w-[24px] h-[24px]" src="/pyk.png" />
                <span class="text-base font-semibold">pyk</span>
            </div>
            <nav>
                <ul class="flex flex-row space-x-4">
                    <li>
                        <a href="/"
                           class="
                                text-sm
                                leading-4
                                text-light-label-secondary
                                hover:text-light-label-default
                        ">
                            Posts
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/pyk"
                           target="_blank"
                           class="
                                text-sm
                                leading-4
                                text-light-label-secondary
                                hover:text-light-label-default
                        ">
                            Github
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/sepyke"
                           target="_blank"
                           class="
                                text-sm
                                leading-4
                                text-light-label-secondary
                                hover:text-light-label-default
                        ">
                            Twitter
                        </a>
                    </li>
                    <li>
                        <a href="mailto:gm@pyk.sh"
                           class="
                                text-sm
                                leading-4
                                text-light-label-secondary
                                hover:text-light-label-default
                        ">
                            gm@pyk.sh
                        </a>
                    </li>
                </ul>
            </nav>
        </header>

        {{ content | safe }}
    </div>
</body>

</html>
