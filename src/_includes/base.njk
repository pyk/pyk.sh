<!doctype html>
<html lang="en">

<head>
    <!-- HTML meta tags -->
    <title>{{ title }}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description }}">

    <!-- Twitter card -->
    <meta name="twitter:card" content="summary"></meta>
    <meta name="twitter:site" content="@sepyke"></meta>
    <meta name="twitter:creator" content="@sepyke"></meta>
    <meta name="twitter:title" content="{{ title }}"></meta>
    <meta name="twitter:description" content="{{ description }}"></meta>
    <meta name="twitter:image" content="https://pyk.sh/pyk.jpeg"></meta>
    <meta name="twitter:image:alt" content="Profile picture of pyk"></meta>
    <meta property="twitter:domain" content="pyk.sh">
    <meta property="twitter:url" content="https://pyk.sh{{ page.url }}">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://pyk.sh/{{ page.url }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:image" content="https://pyk.sh/pyk.jpeg">

    <link rel="icon" href="/favicon.ico" sizes="any">

    <!-- stylesheet -->
    <link rel="stylesheet" href="/style.css?v={% etag %}"/>

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>

<body>
    <div id="container">
        <header>
            <div id="profile">
                <img src="/pyk.png" />
                <span>pyk</span>
            </div>
            <nav>
                <ul>
                    <li>
                        <a href="/" {% if page.url == "/" %} aria-current="page" {% endif %}>
                            index
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/pyk" target="_blank">
                            github
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/sepyke" target="_blank">
                            twitter
                        </a>
                    </li>
                    <li>
                        <a href="mailto:gm@pyk.sh">
                            gm@pyk.sh
                        </a>
                    </li>
                </ul>
            </nav>
        </header>

        {{ content | safe }}

    </div>

    <footer>
		Copyright &copy; 2022 <a href="/">pyk</a>. All rights reserved.
    </footer>
</body>

</html>
