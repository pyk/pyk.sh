---
layout: base.njk
---

{% set posts = collections[ tag ] %}

<article>
    <h1>{{ title }}</h1>


    <table id="post-index">
        <thead>
            <th>Year</th>
            <th>Title</th>
            <th>Date</th>
        </thead>
        <tbody>
            {% for post in posts | reverse %}
                <tr>
                    <td class="post-year">
                        {{post.date | formatDate("YYYY") }}
                    </td>
                    <td class="post-title">
                        <a href="{{ post.url }}">
                            {{ post.data.title }}
                        </a>
                    </td>
                    <td class="post-date">
                        {{ post.date | formatDate("MM/DD")}}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</article>

