---
layout: base.njk
---

{% set posts = collections[ tag ] %}

<article>
    <h1>{{ title }}</h1>

    <ol id="post-index">
        {% for post in posts | reverse %}
            <li class="post-link">
                <a href="{{ post.url }}">
                    {{ post.data.title }}
                </a>
                <span>
                    <time datetime="{{ post.date | formatDate("YYYY-MM-DD") }}">{{ post.date | formatDate("ddd MMM D YYYY") }}</time>
                    in
                    {% for tag in post.data.tags | filterTags %}
                        {% set tagUrl %}/topics/{{ tag | slugify }}/{% endset %}
                        <a href="{{ tagUrl | url }}">{{ tag }}</a>
                    {% endfor %}
                </span>
            </li>
        {% endfor %}
    </ol>

</article>

