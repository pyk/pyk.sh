---
layout: base.njk
header:
    image: "/opengraph.png"
    description: Co-founder of Risedle
---

{%- from "components/project-item/macro.njk" import projectItem -%}

<main>
        <section id="about">
            <p>
                Helping Web3 investors access decentralized finance and gains
                a sustainable returns. Writing about web & smart contract
                development.
            </p>
        </section>

        <section id="project-section">
            <h2>Featured projects</h2>
            <ul class="projects">
                {%- for project in collections.project -%}
                    <li>
                        {{
                            projectItem({
                                url: project.url,
                                projectId: project.data.projectId,
                                title: project.data.title,
                                date: project.data.date,
                                description: project.data.description,
                                stacks: project.data.stacks
                            })
                        }}
                    </li>
                {%- endfor -%}
            </ul>
            <a href="/projects" title="Show all projects">Show all projects &#10142;</a>
        </section>

        <section id="latest-post-section">
            <h2>Latest tutorials</h2>
            <ul class="posts">
                {%- for post in collections.tutorial | reverse -%}
                    <li>
                        <a
                            class="post-item"
                            href="{{ post.url }}"
                            title="{{ post.data.title }}"
                        >
                            <span>
                                {{ post.data.date | formatDate("YYYY/MM") }}
                            </span>
                            <h3>{{ post.data.title }}</h3>
                        </a>
                    </li>
                {%- endfor -%}
            </ul>
            <a href="/tutorials" title="Show all tutorials">Show all tutorials &#10142;</a>
        </section>
</main>
