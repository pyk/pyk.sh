{
  "name": "pyk.sh",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --check .",
    "build:site": "eleventy",
    "build:css": "tailwindcss -i ./style.css -o ./_site/style.css --minify",
    "build:js": "esbuild ./script.ts --bundle --minify --target=chrome58,firefox57,edge16,safari11 --outfile=./_site/script.js",
    "build": "concurrently pnpm:build:*",
    "dev:serve": "eleventy --serve",
    "dev:css": "tailwindcss -i ./style.css -o ./_site/style.css --watch --minify",
    "dev:js": "esbuild ./script.ts --watch --bundle --minify --target=chrome58,firefox57,edge16,safari11 --outfile=./_site/script.js",
    "dev": "concurrently pnpm:dev:*",
    "prepare": "husky install",
    "postinstall": "pnpm prepare",
    "commit:lint": "lint-staged",
    "commit:msg": "commitlint"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "4.1.0",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@risedle/prettier-config": "0.1.2",
    "concurrently": "7.4.0",
    "dayjs": "1.11.5",
    "eleventy-google-fonts": "0.0.5",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.8"
  },
  "dependencies": {
    "@quasibit/eleventy-plugin-schema": "1.10.0",
    "esbuild": "0.16.10",
    "front-matter": "4.0.2",
    "highlight.js": "11.7.0",
    "lodash.escape": "4.0.1",
    "markdown-it": "13.0.1",
    "markdown-it-anchor": "8.6.5",
    "markdown-it-attrs": "4.1.4",
    "markdown-it-emoji": "2.0.2",
    "markdown-it-front-matter": "0.2.3",
    "markdown-it-highlightjs": "4.0.1",
    "markdown-it-prism": "2.3.0",
    "markdown-it-task-lists": "2.1.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "twemoji": "14.0.2"
  }
}
